<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Inse.Fiproject.Wpf.Controls">

    <Style x:Key="local:Overlayer" TargetType="local:Overlayer">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:Overlayer">
                    <Border>
                        <AdornerDecorator x:Name="PART_OverlayLayer">
                            <Grid x:Name="PART_OverlayElement" />
                        </AdornerDecorator>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>